{
  "canisters": {
    "user": {
      "type": "motoko",
      "main": "backend/user/main.mo",
      "declarations": {
        "node_compatibility": true
      }
    },
    "transaction": {
      "type": "motoko",
      "main": "backend/transaction/main.mo",
      "declarations": {
        "node_compatibility": true
      }
    },
    "chat": {
      "type": "motoko",
      "main": "backend/chat/main.mo",
      "declarations": {
        "node_compatibility": true
      }
    },
    "frontend": {
      "main": "src/index.html",
      "dependencies": ["user","transaction","chat"],
      "type": "assets",
      "source": ["dist/"]
    }
  },
  "defaults": {
    "build": {
      "packtool": "mops sources"
    }
  },
  "networks": {
    "local": {
      "bind": "127.0.0.1:4943"
    }
  },
  "output_env_file": ".env",
  "version": 2
}
