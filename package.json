    "@tailwindcss/vite": "^4.0.8",
    "ic-websocket-js": "^0.4.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.2.0",
    "react-router-dom": "^7.2.0",
    "uuid": "^11.1.0",
